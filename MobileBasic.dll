    fillRect4(x, y, x1, y1, x2, y2, x3, y3) {
        var arr = [
            [x, y],
            [x1, y1],
            [x2, y2],
            [x3, y3]
        ];
        ctx.beginPath();
        for (var i = 0; i < arr.length; i++) {
            if (i == 0) ctx.moveTo(arr[i][0], arr[i][1]);
            else ctx.lineTo(arr[i][0], arr[i][1]);
        }
        ctx.fill();
        return true;
    },

